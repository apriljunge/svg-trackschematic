<svg viewBox="-1 -1 2 2" xmlns="http://www.w3.org/2000/svg">
    <style>
        :is(svg) {
            --foreground: black;
            --background: white;
            fill: var(--foreground);
            stroke: var(--foreground);
        }
        .branch-right {
            --transform: scale(1, -1);
        }
        .face-backward,
        .backward {
            --transform: scale(-1, 1);
        }
        .face-backward.right,
        .backward.branch-right {
            --transform: scale(-1, -1);
        }
        symbol {
            transform: var(--transform);
            stroke-width: {{ 1 | ptInCm }};
        }
    </style>
    {{ content | safe -}}
</svg>